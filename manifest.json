{
  "manifest_version": 3,
  "name": "AXP Metrics Font Size",
  "version": "1.0",
  "author": "Nipon Maluengnont",
  "description": "Change font size of specific elements on AXP Dashboard.",
  "permissions": ["activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["*://*.avayacloud.com/services/ApplicationCenter/*"],
      "js": ["axpDashboard.js"]
    }
  ],
  "action": {
    "default_icon": {
      "48": "icon-text-48.png",
      "64": "icon-text-64.png"
    }
  },
  "icons": {
    "48": "icon-text-48.png",
    "64": "icon-text-64.png"
  }
}
